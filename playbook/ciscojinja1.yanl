---
-
  hosts: cisco_device
  connection: network_cli
  #gather_facts: no

  tasks:
    - name: generate
      template:
        src:  "ios.j2"
        dest: "{{inventory_hostname}}.cfg"
      delegate_to: localhost
 
    - name: load Cisco Basic Config
      ios_config:
        src:  "{{inventory_hostname}}.cfg"
        save_when: modified
      loop: "{{ interfaces }}"
